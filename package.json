{
  "name": "image-to-mosaic",
  "version": "1.0.0",
  "description": "A zero-dependency JavaScript library that transforms images into interactive mosaic tiles with customizable patterns, animations, and effects",
  "type": "module",
  "main": "./dist/image-to-mosaic.umd.js",
  "module": "./dist/image-to-mosaic.es.js",
  "types": "./dist/index.d.ts",
  "browser": "./dist/image-to-mosaic.umd.js",
  "unpkg": "./dist/image-to-mosaic.umd.js",
  "jsdelivr": "./dist/image-to-mosaic.umd.js",
  "exports": {
    ".": {
      "import": "./dist/image-to-mosaic.es.js",
      "require": "./dist/image-to-mosaic.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mosaic",
    "image",
    "tiles",
    "grid",
    "animation",
    "css",
    "web-component",
    "effects",
    "gallery",
    "interactive"
  ],
  "author": "Manish Gupta (https://github.com/M4n1shG)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/M4n1shG/image-to-mosaic.git"
  },
  "bugs": {
    "url": "https://github.com/M4n1shG/image-to-mosaic/issues"
  },
  "homepage": "https://github.com/M4n1shG/image-to-mosaic#readme",
  "devDependencies": {
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.0"
  }
}
